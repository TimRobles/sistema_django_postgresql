upstream pruebas_app {
  server unix:/webapps/sistema_django_postgresql/run/gunicorn.sock fail_timeout=0;
}
 
server {
 
    listen   80;
    server_name multiplay-group.com;
 
    access_log /webapps/sistema_django_postgresql/logs/nginx-access.log;
    error_log /webapps/sistema_django_postgresql/logs/nginx-error.log;
 
    location /static/ {
        alias   /webapps/sistema_django_postgresql/sistema_django_postgresql/static/;
    }
    
    location /media/ {
        alias   /webapps/sistema_django_postgresql/sistema_django_postgresql/media/;
    }
 
    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;

        if (!-f $request_filename) {
            proxy_pass http://pruebas_app;
            break;
        }
    }
}
